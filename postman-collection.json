          "name": "Create Bot",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 201) {",
                  "  const response = pm.response.json();",
                  "  pm.collectionVariables.set('bot_id', response.bot.id);",
                  "}"
                ]
              }
            }
